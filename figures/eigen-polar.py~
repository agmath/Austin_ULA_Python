from figures import *
from math import *

width=150
height=150
margin = 5

beginfigure("eigen-polar", width_2*margin, height+2*margin)
setupcoordinates([margin,margin,width+margin,height+margin],
                 [-1,-1,5,5])

axes = Axes()
axes.draw()

a = 3
b = 4

newpath()
arc(0,0,0.5,0,atan2(b,a))
stroke()

Line([0,0], [a,b]).draw()

p = Point([a,b], 2.5, fillcolor=blue)
p.fill()
p.draw()

endfigure()

