from figures import *

fwidth = 430
margin = 7
imargin = 20
fheight = fwidth

width = 2*fwidth+2*margin + imargin
height = fheight+2*margin

size = 4

beginfigure("svd-logo", width, height)

gsave()
setupcoordinates([margin, margin, fwidth+margin, fheight+margin],
                 [-size, -size, size, size])

u1 = [0.8506508083520399, 0.5257311121191336]
u2 = [-0.5257311121191336, 0.8506508083520399]

gsave()
atransform(u1, u2)

Grid([-size,1,size], [-size,1,size]).draw()
grestore()

axes = Axes()
axes.draw()
axes.setticks([-size,1,size], [-size,1,size])
axes.drawticks()

def drawvec(v, c):
    v = Vector(v, fillcolor=c, color=c)
    v.fill()

drawvec(u1)
drawvec(u2)

grestore()

gsave()
setupcoordinates([margin, margin, fwidth+margin, fheight+margin],
                 [-size, -size, size, size])

Grid([-size,1,size], [-size,1,size]).draw()
axes = Axes()
axes.draw()
axes.setticks([-size,1,size], [-size,1,size])
axes.drawticks()

s1 = 1.618033988749895
s2 = 0.6180339887498948

v1 = [0.5257311121191336, 0.85065080835204]
v2 = [-0.85065080835204, 0.5257311121191336]

def drawvec(v, c):
    v = Vector(v, fillcolor=c, color=c)
    v.fill()

drawvec(u1)
drawvec(u2)


grestore()

endfigure()

