from figures import *
from math import *

color = yellow

width=200
height=width

v1 = [1,0]
v2 = [cos(pi/3),sin(pi/3)]

hexagon = [[0,0], [1,0], [2,1], [2,2], [1,2], [0,1]]

def coords(p):
    return vsum(smult(p[0],v1),smult(p[1],v2))

def cell(p):
    gsave()
    translate(coords(p))
    newpath()
    moveto(coords(hexagon[0]))
    for p in hexagon:
        lineto(coords(p))
    closepath()
    stroke()

    for p in hexagon:
        vertex(p)

    grestore()

def vertex(p):
    p = Point(p, 2.5, fillcolor=color)
    p.fill()
    p.draw()

beginfigure("ex-graphite", width, height)
setupcoordinates([0,0,width,height],
                 [-2,-2,4,4])

cell([0,0])

endfigure()


