from figures import *
from math import *

width=150
height=width
margin = 5

beginfigure("ex-reflection-def", width+2*margin, height+2*margin)
setupcoordinates([margin,margin,width+margin,height+margin],
                 [-2,-2,2,2])

axes = Axes()
axes.draw()

Line([-2,-1],[2,1], linewidth=2).draw()

angle = atan(1/2.0)
t = 0
N = 20.0
dt = angle/N
r = 0.2
moveto(r,0)
for i in range(N):
    t += dt
    lineto(r*cos(t), r*sin(t))
stroke()

Label(r"$\theta$", [r*1.1*cos(angle/2), r*1.1*sin(angle/2)], alignment="lc").draw()

endfigure()

