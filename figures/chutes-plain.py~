from figures import *

dx = 25
width = dx*8
height = dx*1
margin = 5

def showlabel(s):
    setfont("Palatino-Roman", 15)
    d = dimensions(l)
    moveto(0,0)
    rmoveto(-d[0]/2, -d[1]/2)
    show(l)

beginfigure("chutes-plain", width+2*margin, height+2*margin)
setupcoordinates([margin, margin, width+margin], [0,0,8,8])

for i in range(8):
    gsave()
    translate(i, 0)
    box(0,0,1,1)
    stroke()
    translate(0.5,0.5)
    showlabel(str(i+1))

endfigure()

