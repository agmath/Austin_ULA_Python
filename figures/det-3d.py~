from fig3d import *

width=2.5*72
height=2.5*72
init3d("fig.rhombic", width, height)
beginpage()

center()
#translate(-40, -80)
#translate(-30, 0)
#scale3d(22, 10, 50)
scalefactor=40
scale3d(scalefactor, scalefactor, scalefactor)
seteye([0.1, 0.5, 1, 0])
setlight([3, 5, 10, 0])

gray = 0.8
fillcolor = [gray, gray, gray]
gray = 0.6
strokecolor=[gray, gray, gray]

vert = [[0,2,1],
        [1,2,0],
        [2,1,0],
        [2,0,1],
        [1,0,2],
        [0,1,2]]
vert.reverse()

def invert(ll):
    r = []
    for l in ll:
        r.append([-l[0], -l[1], -l[2]])
    r.reverse()
    return r

facecolor=[0.8]*3
verts = [ [[2,0,0], [1,1,1], [0,0,2], [1,-1,1]],
          [[2,0,0], [1,1,-1], [0,2,0], [1,1,1]],
          [[2,0,0], [1,-1,-1], [0,0,-2], [1,1,-1]],
          [[2,0,0], [1,-1,1], [0,-2,0], [1,-1,-1]],
          [[0,2,0], [-1,1,1], [0,0,2], [1,1,1]],
          [[0,2,0], [1,1,-1], [0,0,-2], [-1,1,-1]]
          ]
          
faces = []
for i in range(6):
    faces.append(Face(verts[i], facecolor))
    faces.append(Face(invert(verts[i]), facecolor))
          
rhombic = convexsurface(faces)
rhombicr = rhombic.reversed()


def rotatey(vlist):
    r = []
    for v in vlist:
        r.append([v[2],v[1],-v[0]])
    return r
def rotatex(vlist):
    r = []
    for v in vlist:
        r.append([v[0],v[2],-v[1]])
    return r
def rotatez(vlist):
    r = []
    for v in vlist:
        r.append([v[1],-v[0],v[2]])
    return r
def reflect(vlist):
    r = []
    for v in vlist:
        r.append([v[0], -v[1], v[2]])
    r.reverse()
    return r

#paint(face0)
#paint(face1)
#paint(face2)

x0 = 2.5
y0 = 2.5
z0 = 2.5
#axes(x0, y0, z0)
#stroke()

axescolor=[0.6]*3

def interior(color, alpha):
    paint(rhombicr, blend(color,alpha, facecolor))
    outline(rhombicr, blend(color,alpha,axescolor))

for f in faces:
    if f.isvisible(get_eye()) == True:
        transparentface(f, facecolor, 0.5, interior)
        facetrace(f)
        stroke(0.5)

#paint(permr)
#outline(permr,0.6)
#paint(perm)
outline(rhombic,0.5)

arrowcolor = 0.3

setarrowdims(2,5)
arrow3dto([0,2,0], [1,1,1], arrowcolor)
arrow3dto([0,2,0], [-1,1,-1], arrowcolor)
arrow3dto([0,2,0], [-1,1,1], arrowcolor)
arrow3dto([0,2,0], [1,1,-1], arrowcolor)

#paint(faces[6])
#paint(faces[7])
#paint(faces[8])
#paint(faces[13])


endpage()
finish()
